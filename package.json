{
  "name": "gift-auctions-platform",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "lint": "node -e \"console.log('lint skipped (demo)')\"",
    "k6:read": "k6 run src/scripts/load/read-heavy.k6.js",
    "k6:bid": "k6 run src/scripts/load/bid-spike.k6.js",
    "k6:mixed": "k6 run src/scripts/load/mixed.k6.js",
    "k6:settle": "k6 run src/scripts/load/settlement-under-load.k6.js",
    "invariants": "ts-node src/scripts/invariants/validate.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mongodb": "^6.9.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "k6": "^0.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
